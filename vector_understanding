#include<bits/stdc++.h>
using namespace std;
int main(){
    vector<int> v;
    // vector<int> vec(10,-1);
    v.push_back(10);
    v.push_back(12);
    v.push_back(112);
    v.push_back(1);
    int n=v.size();
    for(int i=0;i<n;i++){
        cout<<v[i]<<" ";
    }
    cout<<endl;
    n=v.size();
    for(int i=0;i<n;i++){
        cout<<v[i]<<" ";
    }
    cout<<endl;
    int maxi= INT_MIN;
    for(int i=0;i<n;i++){
        if(maxi<v[i]){
            maxi=v[i];
        }
    }
    cout<<maxi<<endl;
    int maxEle = * max_element(v.begin(),v.end());
    cout<<"Maximun Elemnet is: "<<maxEle<<endl;
    int minEle = * min_element(v.begin(),v.end());
    cout<<"Minimun Elemnet is: "<<minEle<<endl;
    int sum = accumulate(v.begin(),v.end(),0);
    cout<<"Sum of element is: "<<sum<<endl;
    sort(v.begin(),v.end());
    cout<<"Sorted Array"<<endl;
    for(int i=0;i<n;i++){
        cout<<v[i]<<" ";
    }
    cout<<endl;
    sort(v.begin(),v.end(),greater<int>());
    cout<<"Sorted Array in reverse"<<endl;
    for(int i=0;i<n;i++){
        cout<<v[i]<<" ";
    }
    cout<<endl;
    return 0;
}

