#include <bits/stdc++.h>
using namespace std;
struct Node{
    int data;
    Node* next;
    Node* prev;
    Node(int v){
        data=v;
        next=NULL;
        prev=nullptr;
    }
};
void PrintDoublyLL(Node* head){
    Node* p=head;
    while(p!=nullptr){
        cout<<p->data<<" ";
        p=p->next;
    }
    cout<<endl;
}
void insertionInDoublyLL(Node* head,int pos,int val){
    Node* p=head;
    Node* q=nullptr;
    for(int i=1;i<pos;i++){
        q=p;
        p=p->next;
    }
    Node* newNode=new Node(val);
    newNode->next=p;
    q->next=newNode;
    p->prev=newNode;
    newNode->prev=q;
}

void insertionInDoublyLLHead(Node*& head,int val){
    Node* p=head;
    Node* newNode=new Node(val);
    newNode->next=p;
    p->prev=newNode;
    head=newNode;
}

void insertionInDoublyLLTail(Node* head,int val){
    Node* p=head;
    while(p->next!=nullptr){
        p=p->next;
    }
    Node* newNode=new Node(val);
    p->next=newNode;
    newNode->prev=p;
}

void DeletioninDoublyLL(Node* head,int pos){
    Node* p=head;
    Node* q=nullptr;
    for(int i=1;i<pos;i++){
        q=p;
        p=p->next;
    }
    q->next=p->next;
    p->next->prev=q;
    delete p;
}

void DeletionInDoublyLLHead(Node*& head){
    Node* p=head;
    head=head->next;
    head->prev=nullptr;
    delete p;

}

void DeletionInDoublyLLTail(Node* head){
    Node* p=head;
    Node* q=nullptr;
    while(p->next!=nullptr){
        q=p;
        p=p->next;
    }
    q->next=nullptr;
    
    delete p;
}
int main() {
    Node* head=new Node(12);
    head->next =new Node(22);
    head->next->prev=head;
    head->next->next =new Node(32);
    head->next->next->prev=head->next;

    PrintDoublyLL(head);
    int pos=3;
    int val=45;
    insertionInDoublyLL(head,pos,val);
    PrintDoublyLL(head);
    int v1=40;
    insertionInDoublyLLHead(head,v1);
    PrintDoublyLL(head);
    insertionInDoublyLLTail(head,v1);
    PrintDoublyLL(head);
    int p1=4;
    DeletioninDoublyLL(head,p1);
    PrintDoublyLL(head);
    DeletionInDoublyLLHead(head);
    PrintDoublyLL(head);
    DeletionInDoublyLLTail(head);
    PrintDoublyLL(head);
    return 0;
}
