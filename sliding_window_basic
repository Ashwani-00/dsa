

/*  time complexity o(n2)
#include<bits/stdc++.h>
using namespace std;
int main(){
    vector<int> arr={3,4,1,5,-2,7,6,1,3};
    int k=3;
    int n=arr.size();
    int maximum=INT_MIN;
    for(int i=0;i<n;i++){
        int sum=0;
        for(int j=i;j<i+k && j<n;j++){
