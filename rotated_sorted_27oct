#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
   int n=8;
   int arr[n]={3,4,5,6,7,0,1,2};
   int target=2;
   int l=0,r=n-1;
   while(l<=r){
       int m=(l+r)/2;
       if (arr[m]==target){
           cout<<m;
           break;
       }
       if(arr[m]<=arr[r]){
           if(target>=arr[m] && target<=arr[r]){
               l=m+1;
           }else{
               r=m-1;
           }
       }else{
           if(target>=arr[l] && target <=arr[m]){
               r=m-1;
           }else{
               l=m+1;
           }
       }
       }
    return 0;
}
