#include <bits/stdc++.h>
using namespace std;
struct Node{
    int data;
    Node* next;
    Node(int v){
        data=v;
        next=NULL;
    }
};
void check(Node* head){
    Node* fast=head;
    Node* slow=head;
    bool flag=false;
    do{
        slow=slow->next;
        fast=fast->next->next;
        if(slow==fast){
            flag=true;
            break;
        }
    }while(fast->next!=nullptr && fast->next->next!=NULL);
    if(flag){
        cout<<"true"<<endl;
    }else{
        cout<<"false"<<endl;
    }
}
void checkposition(Node* head){
    Node* fast=head;
    Node* slow=head;
    do{
        slow=slow->next;
        fast=fast->next->next;
        if(slow==fast){
            slow=head;
            int position=1;
            while(slow!=fast){
                slow=slow->next;
                fast=fast->next;
                position++;
            }
            cout<<position<<endl;
            break;
        }
    }while(fast->next!=nullptr && fast->next->next!=NULL);
}


int main() {
    Node* head=new Node(12);
    head->next =new Node(22);
    head->next->next =new Node(32);
    head->next->next->next=new Node(42);
    head->next->next->next->next=new Node(52);
    head->next->next->next->next->next=new Node(62);
    head->next->next->next->next->next->next=head->next->next->next;

    check(head);
    checkposition(head);
    return 0;
}
