#include <iostream>
using namespace std;
struct Node{
    int data;
    Node* next;
    Node(int n){
        data=n;
        next=NULL;
    }
};
void print(Node* head){
    Node* p=head;
    while(p!=NULL){
        cout<<p->data<<" ";
        p=p->next;
    }
    cout<<endl;
}
void deletioninLL(Node* head,int pos){
    Node* p = head;
    Node* q=nullptr;
    for(int i=1;i<pos;i++){
        q=p;
        p=p->next;
    }
    q->next=p->next;
    delete p;
}
void deletioninLLhead(Node*& head){
    Node* p=head;
    head=head->next;
    delete p;
}


int main() {
    Node* head= new Node(4);
    head->next= new Node(7);
    head->next->next= new Node(10);
    head->next->next->next= new Node(13);
    head->next->next->next->next= new Node(16);
    print(head);
    int pos=3;
    deletioninLL(head,pos);
    print(head);
    deletioninLLhead(head);
    print(head);
    
    return 0;
}
