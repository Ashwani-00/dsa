    if(idx==n)return INT_MIN;
    return max(arr[idx],max(arr,idx+1,n);
*/


#include<bits/stdc++.h>
using namespace std;
int max(int arr[],int x,int n,int m){
    if(x>=n)return m;
    if(m<arr[x]){
        m=arr[x];
    }
    return max(arr,x+1,n,m) ;
}
int main(){
    int arr[]={2,3,7,4,2};
    int n=5;
    int total=max(arr,0,n,-1);
    cout<<total<<" ";
    return 0;
}

//find min element in array
#include<bits/stdc++.h>
using namespace std;
int min(int arr[],int x,int n,int m){
    if(x>=n)return m;
    if(m>=arr[x]){
        m=arr[x];
    }
    return min(arr,x+1,n,m) ;
}
int main(){
    int arr[]={2,3,1,4,12};
    int n=5;
    int total=min(arr,1,n,arr[0]);
    cout<<total<<" ";
    return 0;
}
