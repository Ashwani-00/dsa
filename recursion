//print in simple order
#include<bits/stdc++.h>
using namespace std;

void print(int idx,int n){
    if(idx>n) return;
    cout<<idx<<" ";
    print(idx+1,n);
}

int main(){
    int n=5;
    print(1,n);
    return 0;
}



//print in reverse order
#include<bits/stdc++.h>
using namespace std;

void print(int idx){
    if(idx<=0) return;
    cout<<idx<<" ";
    print(idx-1);
}

int main(){
    int n=5;
    print(n);
    return 0;
}

//done as decreasing n which is not a good prctice
#include<bits/stdc++.h>
using namespace std;

void print(int idx,int n){
    if(n<idx) return;
    cout<<n<<" ";
    print(idx,n-1);
}

int main(){
    int n=5;
    print(1,n);
    return 0;
}

//using tail recursion
#include<bits/stdc++.h>
using namespace std;

void print(int idx,int n){
    if(n<idx) return;
    print(idx+1,n);
    cout<<idx<<" ";
}

int main(){
    int n=5;
    print(1,n);
    return 0;
}

//print array in a straight way
#include<bits/stdc++.h>
using namespace std;
void print(int arr[],int x,int n){
    if(x>=n)return;
    cout<<arr[x]<<" ";
    print(arr,x+1,n);
}
int main(){
    int arr[]={2,3,5,4,7};
    int n=5;
    print(arr,0,n);
    return 0;
}

//print array in reverse order
#include<bits/stdc++.h>
using namespace std;
void print(int arr[],int x,int n){
    if(x>=n)return;
    print(arr,x+1,n);
    cout<<arr[x]<<" ";
}
int main(){
    int arr[]={2,3,5,4,7};
    int n=5;
    print(arr,0,n);
    return 0;
}


//find sum of array
#include<bits/stdc++.h>
using namespace std;
int sum(int arr[],int x,int n){
    if(x>=n)return 0;
    return arr[x]+sum(arr,x+1,n);
}
int main(){
    int arr[]={2,3,5,4,7};
    int n=5;
    int total=sum(arr,0,n);
    cout<<total<<" ";
    return 0;
}


//find max element in array

/*
